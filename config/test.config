server {
	server_name test
	listen 10.24.104.1:8081

	root html/site1/
	index monsite.html

	error_page html/site1/error.html
	max_body_size 100
	cgi /usr/bin/php-cgi,/usr/bin/python3,/usr/bin/bash
	cgi_ext .php,.py,.sh
	allow_methods GET,POST,DELETE
	tmp tmp/
	listening_file on

	location /test.php {
		allow_methods GET,POST
		root html/site1/
		redirection ...
	}

	location /2emeserv1 {
		allow_methods GET,POST
		root html/
		redirection ...
	}
}

